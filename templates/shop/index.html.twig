{% extends 'base.html.twig' %}

{% block title %}Nos Produits
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-3 text-light">
			<h3 class="m-5">Filtrer</h3>
			{{ form(form) }}
			</div>
			<div class="col-md-9">

				<div class="product-container  ">
					<div class="row">
						<h3 class="m-5 text-light">Nos Produits</h1>
						{% for product in products %}
							<div class="col-md-4 ">
								<div class="product-item text-center m-3 bg-light rounded">
									<div class="mb-3">
										<a href="{{path('app_product', {'slug' : product.slug })}}"><img src="/public/assets/images/uploads/{{product.image}}" alt="{{product.name}}" class="img-fluid"></a>
									</div>
									<div class="text-dark mb-3">
										<h5 class="fs-5">
											{{product.name}}
										</h5>
										<span class="product-titre fs-6">
											{{product.titre}}
										</span><br>
										<span class="product-price fs-6 ">{{ (product.price / 100)|number_format(2, ',' , '.')}}
											â‚¬</span>
									</div>
								</div>

							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>


	{% endblock %}
